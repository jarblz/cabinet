<div class="splash-logo-holder">
  <%= image_tag 'brand-text.png', width: '300px' %>
</div>
<div class="devise-container">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:'form-horizontal'}) do |f| %>
    <div class="form-group">
      <div class="col-sm-12">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control inverse'  %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-12">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control inverse' %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
    <div class="form-group remember-me">
      <div class="col-sm-offset-2 col-sm-10">
        <div class="checkbox">
          <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %>
            Remember Me
          <% end %>
        </div>
      </div>

    </div>
    <% end -%>

    <div class="actions log-in">
      <%= f.submit "Log in", class: 'button btn-standard inverse-button left-block' %>
      <%= link_to "Create Account", new_registration_path(resource_name), class: 'button btn-alternate inverse-button right-block' %>
    </div>
    <% end %>

  <%= render "devise/shared/links" %>
</div>
