<div class="sub-menu">
  <h3>manage competencies</h3>
</div>
<div class="container container-card ">
  <div class="header-bar">
    <%= link_to 'New Competency', new_admin_competency_path, class: 'btn btn-info inline' %>&nbsp;
    <%= link_to 'Back', root_path, class: 'btn btn-info inline' %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @competencies.each do |competency| %>
        <tr>
          <td><%= competency.name %></td>
          <td><%= link_to 'Show', admin_competency_path(competency), class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Edit', edit_admin_competency_path(competency), class: 'btn btn-info btn-xs'  %></td>
          <td><%= link_to 'Destroy', admin_competency_path(competency), method: :delete, class: 'btn btn-info btn-xs' , data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
