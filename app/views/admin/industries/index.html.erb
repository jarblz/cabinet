<div class="container admin-container">
  <div class="header-bar">
    <h1 style="display:inline;">Industries</h1>
    <%= link_to 'New Industry', new_admin_industry_path, class: 'btn btn-info inline' %>&nbsp;
    <%= link_to 'Back', root_path, class: 'btn btn-info inline' %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @industries.each do |industry| %>
        <tr>
          <td><%= industry.name %></td>
          <td><%= link_to 'Show', admin_industry_path(industry), class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Edit', edit_admin_industry_path(industry), class: 'btn btn-info btn-xs'  %></td>
          <td><%= link_to 'Destroy', admin_industry_path(industry), method: :delete, class: 'btn btn-info btn-xs' , data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
