<div class="container admin-container">
  <p id="notice"><%= notice %></p>
  <div class="header-bar">
    <h1 style="display:inline;">Traits</h1>
    <%= link_to 'New Trait', new_admin_trait_path, class: 'btn btn-info inline' %>&nbsp;
    <%= link_to 'Back', root_path, class: 'btn btn-info inline' %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col" colspan="2">Recruiter Trait?</th>
        <th scope="col">Description</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @traits.each do |trait| %>
        <tr>
          <td><%= trait.name %></td>
          <td colspan="2"><%= trait.is_recruiter ? "Yes" : "No" %></td>
          <td><%= trait.description %></td>
          <td><%= link_to 'Show', admin_trait_path(trait), class: 'btn btn-info btn-xs' %></td>
          <td><%= link_to 'Edit', edit_admin_trait_path(trait), class: 'btn btn-info btn-xs'  %></td>
          <td><%= link_to 'Destroy', admin_trait_path(trait), method: :delete, class: 'btn btn-info btn-xs' , data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
