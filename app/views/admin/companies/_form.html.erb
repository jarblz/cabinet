<%= form_for([:admin, company]) do |f| %>
  <% if company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% company.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, for: 'company_name'%>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :contact_email, for: 'company_contact_email'%>
    <%= f.text_field :contact_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone, for: 'company_phone'%>
    <%= f.text_field :phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :bio, for: 'company_bio'%>
    <%= f.text_field :bio, class: 'form-control' %>
  </div>

  <div class="form-group">

    <% if company.logo.exists? %>
      <%= image_tag company.logo.url(:thumb) %><br/>
      <%= f.label "Upload a different logo", for: 'company_logo'%>
      <%= f.file_field :logo %>

    <% else %>
      <%= f.label :logo, for: 'company_logo'%>
      <%= f.file_field :logo %>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :status, for: 'company_status'%>
    <%= f.select :status, Company.statuses.keys.map { |w| [w.humanize, w] } %>
  </div>


  <div class="form-group">
    <%= f.label :traits, for: 'company_status'%>
    <%= f.collection_check_boxes :trait_ids, Trait.all, :id, :name do |b| %>
      <div class="row">
        <%= b.label(class: "check_box") do %>
          <div class="col-xs-1">
            <%= b.check_box(class: "check_box") %>
          </div>

          <div class="col-xs-11">
            <%= b.object.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>


  <div class="actions">
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
