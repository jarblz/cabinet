<div class="container-card split-cards">
  <div class="upper-check uh-oh"><span class="glyphicon glyphicon-question-sign"></span></div>
  <% if current_user.company.try(:inactive?) %>
    <div class="header-section" id='header'>
      Good Job, Your linked, but your company hasn't yet been activated!
    </div>
    <div class="company-logo">
      <%= image_tag current_user.company.logo.url(:thumb) %>
    </div>
    <div class="logo-caption">Your Company: <%=current_user.company.name%></div>

  <% else %>
    <div class="header-section" id='header'>
      Connect with your company
    </div>
    <div class="card-icon-large"><span class='glyphicon glyphicon-briefcase'></span></div>
    <div class="button btn-standard" id="linkCompany">Enter Company Code</div>

    <div class="link_company" hidden>
      <%= form_tag link_company_post_url, method: 'patch', html: {class:'form-horizontal'} do %>
      <div class="form-group">
        <%= text_field_tag "company_code", nil, class: 'form-control', placeholder: 'Company Code' %>
      </div>
      <div class="actions"><%= submit_tag 'Connect', class: 'button btn-standard' %></div>
      <% end %>
    </div>
  <% end %>
</div>

<script type="text/javascript">
  $('#linkCompany').click(function(){
    $('#linkCompany').slideUp();
    $('.link_company').fadeIn();
  });
</script>
